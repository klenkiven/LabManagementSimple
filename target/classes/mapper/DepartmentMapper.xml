<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.tyut.selaba2.management.mapper.DepartmentMapper">
    <resultMap id="departmentMapper" type="Department">
        <id   property="deptName"  column="department_name"/>
        <result   property="leaderId"  column="department_manager_id"/>
        <result   property="leaderId2" column="department_manager_id_2"/>
        <result   property="leaderId3" column="department_manager_id_3"/>
        <result   property="leaderId4" column="department_manager_id_4"/>
        <result   property="leaderId5" column="department_manager_id_5"/>
    </resultMap>

    <!-- 查询所有部门的信息 -->
    <select id="selectAllDepartmentsList" resultMap="departmentMapper">
        select * from lab_department
    </select>

    <!-- 通过部门名称查询部门信息 -->
    <select id="selectDepartmentByName" resultMap="departmentMapper" parameterType="java.lang.String">
        select * from lab_department where department_name = #{deptName}
    </select>

    <!-- 修改部门的信息 -->
    <update id="updateDepartment" parameterType="Department">
        update lab_department
        <set>
            <if test="leaderId != null and leaderId != 0">department_manager_id = #{leaderId}, </if>
            department_manager_id_2 = #{leaderId2},
            department_manager_id_3 = #{leaderId3},
            department_manager_id_4 = #{leaderId4},
            department_manager_id_5 = #{leaderId5}
        </set>
        where department_name = #{deptName}
    </update>

    <!-- 插入指定的部门 -->
    <insert id="insertDepartment" parameterType="Department">
        insert into lab_department (
        <if test="deptName != null and deptName != ''">department_name, </if>
        <if test="leaderId != null and leaderId != 0">department_manager_id, </if>
        department_manager_id_2,
        department_manager_id_3,
        department_manager_id_4,
        department_manager_id_5
        ) value (
        <if test="deptName != null and deptName != ''">#{deptName}, </if>
        <if test="leaderId != null and leaderId != 0">#{leaderId}, </if>
        #{leaderId2},
        #{leaderId3},
        #{leaderId4},
        #{leaderId5}
        )
    </insert>

    <!-- 删除指定名字的部门 -->
    <delete id="deleteDepartmentByName" parameterType="java.lang.String">
        delete from lab_department
        where department_name = #{deptName}
    </delete>

</mapper>